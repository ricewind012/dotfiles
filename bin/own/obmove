#!/bin/sh
. "$bin/common.sh"

move() xdotool windowmove $id "$(( $1 + margin ))" "$(( $2 + margin + title_h ))"
size() xdotool windowsize $id "$@"

find_window() for i in $(xdotool search --class "$1"); do
	case $(xdotool getwindowname $i) in
		$2) id=$i; break
	esac
done

main() {
	[ "$1" ] || {
		printf 'Usage: %s class pattern x y w h\n' "${0##*/}" >&2
		exit 2
	}

	title_h=32
	margin_l=$(grep '<left' "${XDG_CONFIG_HOME:=$HOME/.config}/openbox/rc.xml" |
		cutmd -d'<>' -f3)
	margin_t=$(grep '<top' "$XDG_CONFIG_HOME/openbox/rc.xml" |
		cutmd -d'<>' -f3)

	find_window "$1" "${2:-*}"

	move "$3" "$4"
	[ "$5" ] && size "$5" "$6"
}

main "$@"
