[module/bspwm]
type = internal/bspwm

; Only show workspaces defined on the same output as the bar
pin-workspaces = false

enable-click = true
enable-scroll = true

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-default = 

label-focused = %icon%
label-focused-foreground = ${xrdb:hl}
label-focused-background = ${xrdb:bg2}
label-focused-underline = ${xrdb:hl}
label-focused-padding = 2

label-occupied = %icon%
label-occupied-foreground = ${xrdb:fg}
label-occupied-underline = ${xrdb:fm}
label-occupied-padding = 2

label-urgent = %icon%
label-urgent-foreground = ${xrdb:ur}
label-urgent-background = ${xrdb:bg}
label-urgent-underline = ${color.ur}
label-urgent-padding = 2

label-empty = %icon%
label-empty-foreground = ${xrdb:fm}
label-empty-padding = 2

;;;;; CUSTOM MODULES ;;;;;

[module/updates]
type = custom/script
interval = 3600

format-prefix = " "
format = <label>
format-underline = ${xrdb:color5}

exec = updates

[module/player]
type = custom/script
exec = player
exec-if = player
tail = true

click-left = player previous
click-middle = player toggle
click-right = player next

format-prefix = " "
format = <label>
format-underline = ${xrdb:color2}

[module/hackspeed]
type = custom/script
exec = hackspeed
tail = true

format-prefix = "  "
format = <label>
format-underline = ${xrdb:color3}

