[module/workspaces]
type = internal/xworkspaces

; Only show workspaces defined on the same output as the bar
pin-workspaces = false

enable-click = true
enable-scroll = true

icon-0 = 1;
icon-1 = 2;
icon-2 = 3;
icon-3 = 4;
icon-4 = 5;
icon-default = 

format = <label-state>
format-padding = 0
label-monitor = %name%
label-active = %icon%
label-active-foreground = ${colors.ac}
label-active-background = ${colors.bg-alt}
label-active-underline = ${colors.ac}
label-occupied = %icon%
label-occupied-foreground = ${colors.fg}
label-occupied-underline = ${colors.fg:#252525}
label-urgent = %icon%
label-urgent-foreground = ${colors.red:#e53935}
label-urgent-background = ${colors.bg:#cc202020}
;;label-urgent-underline = ${color.red}
label-empty = %icon%
label-empty-foreground = ${colors.grey}
label-active-padding = 2
label-urgent-padding = 2
label-occupied-padding = 2
label-empty-padding = 2

;;;;; CUSTOM MODULES ;;;;;

[module/updates]
type = custom/script
interval = 3600

format-prefix = " "
format = <label>
format-underline = #505050

exec = $bin/polybar/updates

[module/player]
type = custom/script
exec = player
exec-if = player
tail = true

click-left = player previous
click-middle = player toggle
click-right = player next

format-prefix = " "
format = <label>
format-underline = #062f11

[module/hackspeed]
type = custom/script
exec = $bin/polybar/hackspeed
tail = true

format-prefix = " "
format = <label>
format-underline = ${colors.indigo}

