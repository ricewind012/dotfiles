format-disconnected = <label-disconnected>
format-connected-underline = ${colors.purple}
label-connected = "| %downspeed:8% %upspeed:8%"
label-disconnected =  "Not connected"

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 

[module/pulseaudio]
