/* ==UserStyle==
@name           Stylus syntax highlighting
@namespace      github.com/openstyles/stylus
@version        1.0.0
@description    A new userstyle
@author         Me

@preprocessor stylus
==/UserStyle== */

clr(c)
	color: s("var(--color%s)", c) !important

@-moz-document regexp("(moz|chrome)-extension://.*")
	.cm-s-default .cm
		&-header, &-def, &-negative, &-qualifier, &-error, &-attribute, &-link
			clr(9)
		&-quote, &-positive, &-number, &-variable-3, &-builtin, &-atom
			clr(10)
		&-operator
			clr(11)
		&-keyword, &-tag
			clr(12)
		&-string, &-string-2, &-property
			clr(13)
		&-variable, &-variable-2
			clr(14)
		&-comment, &-bracket, &-punctuation, &-meta
			color: var(--text-muted) !important
		&-matchhighlight
			background-color: var(--hl) !important
			color: var(--hl-text) !important
