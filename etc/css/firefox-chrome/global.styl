{
	display: none $i;
}

/**
 * Variables
**/
:root {
	// XXX: Why is 4px needed ?
	--sidebar-width: calc(228px + 16px + 1ch + 4px);
	--wm-border: var(--accent);

	// duskfox icons
	--context-iconic-margin: 0 1ch;

	// Reserve own variables
	--reserve-bg: var(--bg);
	--reserve-fg: var(--fg);
	--reserve-border: var(--border);
	--reserve-pad: var(--pad);

	&:-moz-window-inactive {
		--wm-border: unquote('hsla(var(--fg-h), var(--fg-s), var(--fg-l), var(--bg-opacity))');
	}

